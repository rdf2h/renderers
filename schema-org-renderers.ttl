@base <http://rdf2h.github.io/generic-rdf2h-Renderers/> .
@prefix gt: <http://rdf2h.github.io/2016/generic-rdf2h-Renderers/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix r2h: <http://rdf2h.github.io/2015/rdf2h#> .
@prefix dc: <http://pns.org/dc/elements/1.1/>.
@prefix s: <http://schema.org/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

<anything>  a r2h:Renderer;
    r2h:type rdfs:Resource;
    r2h:context r2h:Default;
    r2h:mustache """
      <h1>Resource: <a href='{{.}}'>
        {{{:render . s:name}}}
      </a></h1>
      {{{:render . r2h:Default-Naked}}}
    """.

<name>  a r2h:Renderer;
    r2h:type rdfs:Resource;
    r2h:context s:name;
    r2h:mustache """
        {{s:name}}
        {{s:givenName}}
        {{s:additionalName}}
        {{s:familyName}}
        {{^+s:name}}
          {{^+s:givenName}}
            {{^+s:additionalName}}
              {{^+s:familyName}}
                {{.}}
              {{/+s:familyName}}
            {{/+s:additionalName}}
          {{/+s:givenName}}
        {{/+s:name}}
        {{#+s:brand}}
          ({{s:brand}})
        {{/+s:brand}}
        {{^+s:brand}}
          {{#+s:legalName}}
            ({{s:legalName}})
          {{/+s:legalName}}
        {{/+s:brand}}
    """.

<ProductModel>  a r2h:Renderer;
    r2h:type s:ProductModel;
    r2h:context r2h:Default;
    r2h:mustache """
      <h1>ProductModel: <a href='{{.}}'>
        {{{:render . s:name}}}
      </a></h1>

      {{{:render . s:ProductModel}}}
    """.

<Product>  a r2h:Renderer;
    r2h:type s:Product;
    r2h:context r2h:Default;
    r2h:mustache """
      <h1>Product: <a href='{{.}}'>
        {{{:render . s:name}}}
      </a></h1>

      {{{:render . s:Product}}}
    """.

<productModel>  a r2h:Renderer;
    r2h:type rdfs:Resource;
    r2h:context s:ProductModel;
    r2h:mustache """
      {{#+s:isVariantOf}}
        <h3>Is a variant of:</h3>
        {{#s:isVariantOf}}
          <a href='{{.}}'>
            {{{:render . s:name}}}
          </a><br>
        {{/s:isVariantOf}}
      {{/+s:isVariantOf}}

      {{#+s:predecessorOf}}
        <h3>Is a predecessor of:</h3>
        {{#s:predecessorOf}}
          <a href='{{.}}'>
            {{{:render . s:name}}}
          </a><br>
        {{/s:predecessorOf}}
      {{/+s:predecessorOf}}

      {{#+s:successorOf}}
        <h3>Is a successor of:</h3>
        {{#s:successorOf}}
          <a href='{{.}}'>
            {{{:render . s:name}}}
          </a><br>
        {{/s:successorOf}}
      {{/+s:successorOf}}

      {{{:render . s:Product}}}
    """.

<product>  a r2h:Renderer;
    r2h:type rdfs:Resource;
    r2h:context s:Product;
    r2h:mustache """

      {{#+s:manufacturer}}
        <h3>Manufactured by:</h3>
        {{#s:manufacturer}}
        <a href='{{.}}'>
          {{{:render . s:name}}}
        </a> <br>
        {{/s:manufacturer}}
      {{/+s:manufacturer}}

      {{#+s:category}}
        <h3>Listed in the following categories:</h3>
        {{#s:category}}
          <a href='{{.}}'>
            {{{:render . s:name}}}
          </a> <br>
        {{/s:category}}
      {{/+s:category}}

      {{{:render . s:Thing}}}
    """.

<Organization>  a r2h:Renderer;
    r2h:type s:Organization;
    r2h:context r2h:Default;
    r2h:mustache """
      <h1>Organization: <a href='{{.}}'>
        {{{:render . s:name}}}
      </a></h1>
      {{{:render . s:Organization}}}
    """.

<Person> a r2h:Renderer;
    r2h:type s:Person;
    r2h:context r2h:Default;
    r2h:mustache """
      <h1>Person: <a href='{{.}}'>
        {{{:render . s:name}}}
      </a></h1>

      *
      {{s:birthDate}}
      {{^+s:birthDate}}
      ?
      {{/+s:birthDate}}
      - &#x271D
      {{s:deathDate}}
      {{^+s:deathDate}}
      ? (may still be alive)
      {{/+s:deathDate}}
      
      {{#s:gender}}
        <br>{{.}}
      {{/s:gender}}

      {{#+s:parent}}
        <h3>Parents:</h3>
        {{#s:parent}}
          <a href='{{.}}'>{{.}}</a><br>
        {{/s:parent}}
      {{/+s:parent}}
      
      {{#+s:children}}
        <h3>Children:</h3>
        {{s:children}}
      {{/+s:children}}

      {{#+s:sibling}}
        <h3>Siblings:</h3>
        {{s:sibling}}
      {{/+s:sibling}}

      {{#+s:relatedTo}}
        <h3>Related to:</h3>
        {{s:relatedTo}}
      {{/+s:relatedTo}}

      {{#+s:address}}
        <h3>Address:</h3>
        {{#s:address}}
          {{{:render . s:address}}}
        {{/s:address}}
      {{/+s:address}}

      {{#+s:telephone}}
        <h3>Telephone:</h3>
        {{s:telephone}}
      {{/+s:telephone}}

      {{#+s:jobTitle}}
        <h3>Job title:</h3>
        {{s:jobTitle}}
      {{/+s:jobTitle}}

      {{#+s:knows}}
        <h3>Knows:</h3>
        {{#s:knows}}
        <a href='{{.}}'>
          {{{:render . s:name}}}
        </a> <br>
        {{/s:knows}}
      {{/+s:knows}}

      {{#+s:knows<-/.}}
        <h3>Known by:</h3>
        {{#s:knows<-/.}}
        <a href='{{.}}'>
          {{{:render . s:name}}}
        </a> <br>
        {{/s:knows<-/.}}
      {{/+s:knows<-/.}}

      {{{:render . s:Thing}}}
      """.

<Thing>  a r2h:Renderer;
    r2h:type s:Thing;
    r2h:context r2h:Default;
    r2h:mustache """
      {{#+s:name}}
        <h1>Resource: <a href='{{.}}'>
          {{{:render . s:name}}}
        </a></h1>
      {{/+s:name}}
      {{{:render . s:Thing}}}
    """.

<organization>  a r2h:Renderer;
    r2h:type rdfs:Resource;
    r2h:context s:Organization;
    r2h:mustache """
      {{#+s:legalName}}
        Legal Name: {{s:legalName}}
      {{/+s:legalName}}

      {{#+s:address}}
        <h3>Address:</h3>
        {{#s:address}}
          {{{:render . s:address}}}
        {{/s:address}}
      {{/+s:address}}

      {{#+s:manufacturer<-/.}}
        <h3>Manufacturer of:</h3>
        {{#s:manufacturer<-/.}}
        <a href='{{.}}'>
          {{{:render . s:name}}}
        </a> <br>
        {{/s:manufacturer<-/.}}
      {{/+s:manufacturer<-/.}}

      {{{:render . s:Thing}}}
    """.

<address>  a r2h:Renderer;
    r2h:type rdfs:Resource;
    r2h:context s:address;
    r2h:mustache """
      {{#+s:streetAddress}}
        {{s:streetAddress}} <br>
      {{/+s:streetAddress}}
      {{s:postalCode}}
      {{s:addressLocality}}
      <br>
      {{#+s:addressRegion}}
        in {{s:addressRegion}}
      {{/+s:addressRegion}}
      {{#+s:addressCountry}}
        ({{s:addressCountry}}) <br>
      {{/+s:addressCountry}}
      {{s:address}}
    """.

<thing>  a r2h:Renderer;
    r2h:type rdfs:Resource;
    r2h:context s:Thing;
    r2h:mustache """
      {{#+s:alternateName}}
        <h3>Also known as:</h3>
        {{#s:alternateName}}
        <a href='{{.}}'>{{.}}</a> <br>
        {{/s:alternateName}}        
      {{/+s:alternateName}}

      {{#+s:description}}
        <h3>Description:</h3>
        {{s:description}}       
      {{/+s:description}}
    """.

<image>  a r2h:Renderer;
    r2h:type rdfs:Resource;
    r2h:context s:image;
    r2h:mustache """
      {{#+s:image}}
        <img src='{{s:image}}' style='max-height:300px'>
      {{/+s:image}}
      {{#+s:logo}}
        <img src='{{s:logo}}' style='max-height:150px'>
      {{/+s:logo}}
      {{{:render . r2h:Default}}}
    """.

<sFullPage> a r2h:Renderer;
    r2h:type rdfs:Resource;
    rdfs:comment """Renders a full page, delegating to renderers in the default 
    context for the body, and to gt:HtmlHead for things like the html title""";
    r2h:context gt:FullPage;
    r2h:mustache """
    {{{@prefix r2h: <http://rdf2h.github.io/2015/rdf2h#>}}}
    {{{@prefix gt: <http://rdf2h.github.io/2016/generic-rdf2h-Renderers/>}}}
    {{{@prefix s: <http://schema.org/>}}}
    <head>
      <title>
        {{#s:name}}
          {{{:render . s:name}}}
        {{/s:name}}
      </title>
      <style>
        a { color :inherit; }
        html { padding:4px; }
        h3 {margin-bottom:0;}
      </style>
    </head>
    <body>
      {{{:render . s:image}}}
    </body>
    """.